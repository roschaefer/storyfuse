<h2 class="ui huge header">{{episode.title}}</h2>

   <div class='container'>
     <div class='row'>

       <div id="mapid"></div>
       <div id='player'>
         <div id='current-title'>
         </div>
         <audio id="audio" preload="auto" tabindex="0" controls="" >
           <source id="audio-source">
             Your Fallback goes here
         </audio>
           <table id="playlist" class='table table-striped table-bordered table-hover'>
           </table >
       </div>
     </div>
   </div>



<p>
{{#if episode.parent}}
{{#link-to 'episode' episode.parent class="ui huge primary button"}}
  <i class="ui icon remove"></i>
  Don't like
{{/link-to}}
{{/if}}
</p>

<p>
{{#if deadEnd}}
<button class="ui huge primary button">
  <i class="ui icon circle"></i>
Record
</button>
{{else}}
  {{#each episode.children as |child|}}
  {{#link-to 'episode' child class="ui huge primary button"}}
    {{child.title}}
{{/link-to}}
{{/each}}
{{/if}}
</p>


{{yield}}
