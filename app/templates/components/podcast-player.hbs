<div class="ui segment">
  <div class="ui middle aligned stackable grid container">
    <div class="row">
      <div class="column">
        {{audio-player title=episode.title url=episode.url}}


          {{#if parent}}
            {{#link-to 'episode' parent class="ui large left floated primary button"}}
            <i class="ui icon backward"></i>
            Back
            {{/link-to}}
          {{/if}}

          {{#if next}}
            {{#link-to 'episode' next class="ui large right floated primary button"}}
            <i class="ui icon forward"></i>
            Next
            {{/link-to}}
          {{else}}
            <button class="ui large right floated primary button">
              <i class="ui icon circle"></i>
              Record
            </button>
          {{/if}}
      </div>
    </div>

    <div class="row">
      <div class="column">

          {{#if firstAlternative}}
            {{#link-to 'episode' firstAlternative class="ui large left floated primary button"}}
            {{firstAlternative.title}}
            {{/link-to}}
          {{/if}}


          {{#if secondAlternative}}
            {{#link-to 'episode' secondAlternative class="ui large right floated primary button"}}
            {{secondAlternative.title}}
            {{/link-to}}
          {{else}}
            {{#if parent}}
              <button class="ui large right floated primary button">
                <i class="ui icon fork"></i>
                Create branch
              </button>
            {{/if}}
          {{/if}}

      </div>
    </div>
  </div>
</div>
