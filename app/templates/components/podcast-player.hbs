<h2>{{episode.title}}</h2>

   <div class='container'>
     <div class='row'>

       <div id="mapid"></div>
       <div id='player'>
         <div id='current-title'>
         </div>
         <audio id="audio" preload="auto" tabindex="0" controls="" >
           <source src={{episode.url}}>
             Your Fallback goes here
         </audio>
           <table id="playlist" class='table table-striped table-bordered table-hover'>
           </table >
       </div>
     </div>
   </div>



<p>
{{#if episode.parent}}
{{#link-to 'episode' episode.parent}}
  Don't like
{{/link-to}}
{{/if}}
</p>

<p>
{{#if deadEnd}}
<button>
Record
</button>
{{else}}
  {{#each episode.children as |child|}}
  {{#link-to 'episode' child}}
    {{child.title}}
{{/link-to}}
{{/each}}
{{/if}}
</p>


{{yield}}
