<div class="ui segment">
  <div class="ui middle aligned stackable grid container">
    <div class="row">
      <div class="sixteen wide column">
          <div class="ui breadcrumb">
            {{#each ancestors as |ancestor index|}}
              {{#link-to 'episode' ancestor class="section"}}
                <div class="{{alternating-class-names index}}">
                  {{ancestor.id}}
                </div>
              {{/link-to}}
              <i class="breadcrumb-divider ui horizontal divider huge long arrow right icon"></i>
            {{/each}}

            {{#link-to 'episode' episode class="active section"}}
              <div class="ui mini circular inverted segment">
                {{episode.id}}
              </div>
            {{/link-to}}

        </div>
      </div>
    </div>
    <div class="row">
      <div class="column">
        {{audio-player title=episode.title url=episode.url}}
      </div>
    </div>
    <div class="row">
      <div class="column">


          {{#if parent}}
            {{#link-to 'episode' parent class="ui large left floated primary button"}}
            <i class="ui icon backward"></i>
            Back
            {{/link-to}}
          {{/if}}

          {{#if next}}
            {{#link-to 'episode' next class="ui large right floated primary button"}}
            <i class="ui icon forward"></i>
            Next
            {{/link-to}}
          {{else}}
            {{#link-to 'episode.new' class="ui large right floated red button"}}
              <i class="ui icon circle"></i>
              Continue Here
            {{/link-to}}
          {{/if}}
      </div>
    </div>

    <div class="row">
      <div class="column">

          {{#if firstAlternative}}
            {{#link-to 'episode' firstAlternative class="ui large left floated green button"}}
            Branch A <br/>
            <small>{{firstAlternative.title}}</small>
            {{/link-to}}
          {{/if}}


          {{#if secondAlternative}}
            {{#link-to 'episode' secondAlternative class="ui large right floated green button"}}
            Branch B <br/>
            <small>{{secondAlternative.title}}</small>
            {{/link-to}}
          {{else}}
            {{#if parent}}
              {{#link-to 'episode.new' parent class="ui large right floated red button"}}
                <i class="ui icon fork"></i>
                Create branch
              {{/link-to}}
            {{/if}}
          {{/if}}

      </div>
    </div>
  </div>
</div>
